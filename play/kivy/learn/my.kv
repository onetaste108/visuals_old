ClockLayout:
    orientation: "vertical"
    time_prop: time

    Label:
        text: "0"
        id: time

    BoxLayout:
        height: 90
        orientation: "horizontal"
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: "start"
            on_press: app.start_stop()

        RobotoButton:
            id: reset
            text: "reset"
            on_press: app.reset()

    Label:
        id: stopwatch
        text: "00.00.[size=40]00[/size]"



<Label>:
    font_name: "Roboto"
    font_size: 60
    markup: True

<RobotoButton@Button>:
    font_name: "Roboto"
    font_size: 25
    bold: True
